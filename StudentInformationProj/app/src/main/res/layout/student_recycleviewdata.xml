<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:id="@+id/tvId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="@color/colorPrimary"
            android:text="ID:" />
        <TextView
            android:id="@+id/tvIdValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:textColor="@color/black"
            android:text="absadf"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textColor="@color/colorPrimaryDark"
            android:text="Name" />
        <TextView
            android:id="@+id/tvNameValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:textColor="@color/black"
            android:text="akjsdhhd" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll1"
        android:weightSum="4"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvRoll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:paddingTop="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Roll" />
        <TextView
            android:id="@+id/tvRollValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.1"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:text="absadf"/>

        <TextView
            android:id="@+id/tvClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:paddingTop="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Class" />
        <TextView
            android:id="@+id/tvClassValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.72"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:text="akjsdhhd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:id="@+id/ll2">
        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:paddingTop="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Subject" />
        <TextView
            android:id="@+id/tvSubjectValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:text="absadf"/>

        <TextView
            android:id="@+id/tvMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:paddingTop="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Marks" />
        <TextView
            android:id="@+id/tvMarksValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.91"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:text="akjsdhhd" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent">
    </View>

</LinearLayout>